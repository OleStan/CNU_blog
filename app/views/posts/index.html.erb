<p style="color: green"><%= notice %></p>

<h1>Posts</h1>




<div id="posts" class="flex flex-col ali">
  <% @posts.each do |post| %>
    <div class="drop-shadow-sm p-1 mb-5 border">
        <h3 class="text-2xl"><%= post.title %></h3>
        <p><%= post.arctile %></p>

      <%= link_to 'show post', post_path(post.id)%>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
